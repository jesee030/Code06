<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context=".RegisterActivity.RegisterActivity">

    <Button
        android:id="@+id/zhuche"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape"
        android:hint="注册"
        android:onClick="onClick"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/reconfirmpassword"
        app:layout_constraintTop_toBottomOf="@+id/reconfirmpassword" />

    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.503"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/quxiao"-->
    <!--        app:layout_constraintTop_toTopOf="@+id/quxiao" -->


    <Button
        android:id="@+id/quxiao"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:hint="取消"
        android:onClick="onClick"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/zhuche"
        app:layout_constraintRight_toRightOf="@+id/reconfirmpassword" />

    <!--    app:layout_constraintBottom_toBottomOf="parent"-->
    <!--    app:layout_constraintEnd_toStartOf="@+id/guideline4"-->
    <!--    app:layout_constraintHorizontal_bias="0.514"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <!--    app:layout_constraintTop_toTopOf="@+id/guideline3"-->
    <!--    app:layout_constraintVertical_bias="0.328"-->

    <TextView
        android:id="@+id/dt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="欢迎来到PhotoShare"
        android:textColor="#CCAE5A"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541" />

    <EditText
        android:id="@+id/inputpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:hint="请输入密码"
        android:textColorHint="@color/white"
        android:paddingLeft="60dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334" />

    <EditText
        android:id="@+id/inputname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape"
        android:hint="请输入用户名"
        android:paddingLeft="60dp"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/inputpassword"
        app:layout_constraintTop_toBottomOf="@+id/inputpassword" />

    <EditText
        android:id="@+id/reconfirmpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:autofillHints=""
        android:background="@drawable/shape"
        android:hint="重新确认密码"
        android:paddingLeft="60dp"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/inputpassword"
        app:layout_constraintTop_toBottomOf="@+id/inputname" />


    <ImageView
        android:id="@+id/password"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/lock"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/inputpassword"
        app:layout_constraintTop_toTopOf="@+id/inputpassword"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/inputname"
        app:layout_constraintTop_toTopOf="@+id/inputname"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/password2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/lock2"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/inputpassword"
        app:layout_constraintTop_toTopOf="@+id/reconfirmpassword"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="quxiao,zhuche" />

</androidx.constraintlayout.widget.ConstraintLayout>