<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMyPhotoActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/addmImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/addimage" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/R2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/R1"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/et_gettitle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="请输入标题"

            android:textColorHint="#E1B54A" />


        <EditText
            android:id="@+id/et_getdetail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/et_gettitle"
            android:layout_alignLeft="@+id/et_gettitle"
            android:layout_alignRight="@+id/et_gettitle"
            android:hint="请输入内容"
            android:textColorHint="#E1B54A" />

        <Button
            android:id="@+id/bt_determine"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_below="@+id/et_getdetail"
            android:layout_alignLeft="@+id/et_gettitle"
            android:layout_marginTop="100dp"
            android:background="@drawable/shape1"
            android:gravity="center"
            android:onClick="onClick"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_alignRight="@+id/et_gettitle"
            android:layout_alignBottom="@+id/bt_determine"
            android:background="@drawable/shape1"
            android:gravity="center"
            android:onClick="onClick"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </RelativeLayout>
</LinearLayout>