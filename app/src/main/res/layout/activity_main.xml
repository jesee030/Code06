<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:contentDescription="share"
                android:gravity="center"
                android:text="SHARE"
                android:textColor="#03A9F4" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <EditText

                android:id="@+id/UserNameText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_shape"
                android:gravity="center"
                android:hint="账号登录"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:autofillHints="" />

            <EditText
                android:id="@+id/PasswordText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:background="@drawable/edittext_shape"
                android:gravity="center"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/PasswordVisibleImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/PasswordText"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/password_tv"
                android:onClick="onClick"
                android:src="@drawable/showpassword" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/register"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_below="@+id/LoginButton"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/shuxian"
                android:gravity="center"
                android:onClick="onClick"
                android:text="点击注册"
                android:textColor="@color/chartreuse"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/shuxian"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text="|"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_alignTop="@+id/register"
                />

            <TextView
                android:id="@+id/forgetpassword"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_below="@+id/LoginButton"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/shuxian"
                android:gravity="center"
                android:onClick="onClick"
                android:text="忘记密码"
                android:textColor="@color/cornsilk"
                android:textSize="15sp" />

            <Button
                android:id="@+id/LoginButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_shape"
                android:onClick="onClick"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>

